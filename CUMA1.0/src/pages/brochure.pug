extends bases/layout.pug
block prepend vars
    - var title = 'brochure'
block content
    main#brochure
        section.formBrochure
            h1 Pour en savoir plus
            h2 Formaulaire de demande de documentation | rendez-vous | devis gratuit | catalogue | Echantillons
            p Télécharger les documents
            p au format PDF en renseignant le formulaire ci-dessous
            form(action='')
                label(for='prenom') Prénom
                input(type='text',name='prenom',id='prenom',placeholder='Prénom')
                label(for='nom') Nom
                input(type='text', name='nom',id='nom',placeholder='Nom')
                label(for='telephone') Téléphone
                input(type='tel',name='telephone',id='telephone',placeholder='Telephone')
                label(for='mail') Email
                input(type='email',name='mail',id='mail',placeholder='Email')
                input(type='submit',value='Je telecharge la brochure')
