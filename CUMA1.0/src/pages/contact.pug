extends bases/layout.pug
block prepend vars
    - var title = 'contact'
block content
        main#Contact
            section.formContact
                h2 CONTACT : Plan d'accès | Mail | Adresse | Heure Ouverture
                article.contact
                    h3 Laissez nous un message
                    form(action='')
                        input(type='text', name='nom', id='nom',placeholder='Nom')
                        input(type='email',name='mail', id='mail',placeholder='Email')
                        input(type='tel',name='telephone', id='telephone',placeholder='Telephone')
                        input(type='text',name='objet', id='objet',placeholder='Objet')
                        textarea
                        input(type='submit',value='Envoyer')
                article.adresseMapping
                    h3 Ou nous trouver ?
                    figure: img(src=imgC+'Actualites/Placeholder.png',alt='carte')
                    .adresse
                        p 43 rue Sedaine
                        p 75011 Paris
                        p 01 44 17 58 00
                    .horaire
                        h4 horaire d'ouverture
                        p Du lundi au Vendredi :
                        p ouver de 9h à 17h

